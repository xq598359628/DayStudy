<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f6f6"
    android:divider="@drawable/gh_cm_divider"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context="com.daystudy.daystudy.MainActivity">


    <RelativeLayout
        android:id="@+id/m_community_health_account_card_title_layout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#fff">

        <TextView
            android:id="@+id/m_community_health_account_card_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:drawableLeft="@drawable/gh_cm_icon_back_gray"
            android:gravity="center_vertical"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/m_community_health_account_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的健康号"
            android:textColor="#333333"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/m_community_health_me_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="保存"
            android:textColor="#333333"
            android:textSize="15sp"/>

    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="sdfsdf"
        android:textSize="13sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="sdfsdf"
        android:textSize="13sp"/>


</LinearLayout>
