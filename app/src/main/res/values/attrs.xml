<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyView">
        <attr name="bg" format="reference"/>
        <attr name="android:text"/>
    </declare-styleable>

    <declare-styleable name="TimelineLayout">
        <!--时间轴左偏移值-->
        <attr name="line_margin_left" format="dimension"/>
        <!--时间轴上偏移值-->
        <attr name="line_margin_top" format="dimension"/>
        <!--线宽-->
        <attr name="line_stroke_width" format="dimension"/>
        <!--线的颜色-->
        <attr name="line_color" format="color"/>
        <!--点的大小-->
        <attr name="point_size" format="dimension"/>
        <!--点的颜色-->
        <attr name="point_color" format="color"/>
        <!--图标-->
        <attr name="icon_src" format="reference"/>
    </declare-styleable>

    <declare-styleable name="TestView">
        <attr name="img" format="reference"/>
        <attr name="android:text"/>
    </declare-styleable>

    <declare-styleable name="MyTextView">
        <attr name="android:text"/>
        <attr name="android:textSize"/>
    </declare-styleable>


    <declare-styleable name="ImageShowPickerView">

        <!-- 单张图片大小（宽高一样） -->
        <attr name="pic_size" format="dimension" />
        <!-- 最大数量 -->
        <attr name="max_num" format="integer" />
        <!-- 添加图片 -->
        <attr name="add_label" format="reference" />
        <!-- 删除图片 -->
        <attr name="del_label" format="reference" />
        <!-- 是否显示删除按钮-->
        <attr name="is_show_del" format="boolean" />
        <!-- 是否展示动画-->
        <attr name="is_show_anim" format="boolean" />
        <!-- 单行显示数量-->
        <attr name="one_line_show_num" format="integer" />

    </declare-styleable>

</resources>